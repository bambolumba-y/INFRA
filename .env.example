# Application
APP_ENV=development
APP_DEBUG=true

# Admin — JSON list of Telegram user IDs allowed to access /admin (e.g. [123,456])
ADMIN_IDS=[]

# Database
DATABASE_URL=postgresql+asyncpg://infra:infra@localhost:5432/infra

# LLM Providers — set the active provider and its API key
LLM_PROVIDER=groq
GROQ_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Groq model defaults
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI model defaults
OPENAI_MODEL=gpt-4o

# Anthropic/Claude model defaults
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=
TELEGRAM_CHANNELS=
TELEGRAM_SESSION_STRING=
TELEGRAM_PHONE=

# Reddit
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=INFRA/0.1 (intelligence terminal)
REDDIT_SUBREDDITS=programming,cscareerquestions,localllama

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_data
CHROMA_HOST=localhost
CHROMA_PORT=8100
